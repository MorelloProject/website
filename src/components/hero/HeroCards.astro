---
import * as marked from "marked";

const { card_section } = Astro.props!;

const markdown_text = (text: any) => {
  return marked.parse(text);
};
---

<div class="grid grid-cols-1 grid-rows-1 md:grid-cols-2 p-2 md:p-2 gap-4">
  {
    card_section.map((card: any) => (
      <div class=" block lg:max-w-[600px] ">
        <div class=" ">
          <img
            class="rounded border-x-[6px] border-white border-t-[6px] w-full h-[250px] object-cover"
            src={card.image.src}
            alt={card.image_alt}
          />
        </div>
        <div class="max-w-max text-center">
          <p
            class="text-base text-dark !important"
            set:html={markdown_text(card.text)}
          />
        </div>
      </div>
    ))
  }
</div>
